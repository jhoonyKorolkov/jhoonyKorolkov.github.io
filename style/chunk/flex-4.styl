.form
	display flex
	
.add
	width 260px
	color: #fff
	background-color: #29353a
	z-index 1000
	&__box
		padding-top 10px
		padding-bottom 10px
	&__close
		position relative
		display block
		font-size: 16px
		padding-left 20px
		color: #fff
		&__icon
			position absolute
			right 20px
			top 5px
			fill:#fff

.add__list
	position relative
	display block
	font-size: 16px
	padding-left 50px
	color: #fff
	&__icon
		position absolute
		left 20px
		fill:#fff

.add__category
	margin-top 35px
	&-title
		font-size: 12px
		padding-left 20px
		text-transform uppercase
	&-field
		box-sizing: border-box
		margin-top 10px
		width 230px
		height 30px
		margin-left 10px
		margin-right 10px
		padding-left 10px
		border-radius: 3px

.add__category-link
	display block
	width 60px
	height 28px
	background-color: #36ad59
	position relative
	top -29px
	left 180px
	&__icon
		position absolute
		fill: #fff
		left 20px
		top 3px



.chose
	//width 1106px
	//background-color: #384950
	position relative
	display flex
	flex-direction: column
	height: 100%
	width 100%

.chose__field
	padding-left 20px
	padding-right 20px
	padding-bottom 10px
	background-color: #384950
	// flex: 0 0 auto
	height 30px
	&-link
		box-sizing: border-box
		border-radius: 3px
		height 30px
		width 100%
		padding-left 20px
	&-icon
		position absolute
		fill: #000000
		top 7px
		right 40px
.goods
	background-color: #f5f5f5
	padding-top 20px
	padding-left 30px
	&__items
		position relative
		margin-right: 120px
		margin-bottom 25px
	&__photo
		// position relative
	&__btn
		position absolute
		top 0
		right -60px

.wrapper__goods
	overflow: scroll
	overflow-x: hidden
	height 100vh
	display flex
	//justify-content space-between
	flex-wrap: wrap
	padding-bottom 50px

.btn__link
	border: 1px solid #dcdcdc
	display inline-block
	position relative
	width 30px
	height 30px
	background-color: #ffffff
	&__icon
		position absolute
		top 5px
		left 5px
	
.asa
	width 200px
	height 200px


.goods__title
	text-align center
	margin-top 20px
	p
		margin 0
		font-size: 16px
		font-weight bold


.goods__text
	text-align center
	margin-top 10px
	p
		margin 0
		font-size: 14px


.buttons-list
	display flex
	width 200px
	justify-content space-between
	position absolute
	bottom 50px
	padding-top 30px
	//padding-top 10px
	padding-bottom 25px
	&__link
		border: none
		background-color: #fff
		padding-top 4px
		padding-bottom 4px
		padding-left 8px
		padding-right 8px
		border-radius: 2px

.btn-action
	background-color: #fff
	position: fixed
	right 0
	bottom 0
	width 100%

.btn__form
	margin-left 500px
	
	