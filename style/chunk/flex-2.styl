.tour
	width 100%
	margin 0 auto
	margin-top 30px
	display flex
	justify-content space-between
	border: 1px solid #ececec
	box-shadow: 0px 5px 5px 0px rgba(0,0,0,0.75);


.tour-photo
	&__img
		max-width 320px
		width 100%

.tour-location
	display flex

.tour-info
	&__list
		margin 0
		padding 0
		list-style-type none

	&__title
		margin 0
		font-weight 500
		font-size: 25px
		padding-left 10px
		margin-bottom 15px
	&__item
		padding-left 45px
		position relative
		font-size: 16px
		margin-bottom 10px
	&__icon
		position absolute
		left 15px
		top 0


.tour-price
	display flex
	justify-content space-around
	margin-top 30px

.tour-comments
	&__text
		font-size: 16px
		margin 0
		margin-left 5px

.tour-money
	&__text
		font-size: 16px
		margin 0
		margin-left 5px

.tour-rating
	&__title
		font-size: 36px
		margin 0
		text-align center
		margin-bottom 15px
	&__stars
		display flex
		margin-bottom 15px
	&__progress
		font-size: 36px
		margin 0
		text-align center
		margin-bottom 25px
	&__btn
		text-align center
		&-link
			display block
			color: #fff
			padding-top 8px
			padding-bottom 8px
			padding-left 35px
			padding-right 35px
			background-color: #f8bd3f
			position relative


.tour-rating__icon
	position absolute
	left 10px
	top 8px
	fill: #fff



.full-stars
	background-image url('/img/bookmark-star.png')
	background-repeat no-repeat
	width 24px
	height 24px
	margin-right 7px

.half-stars
	background-image url('/img/bookmark-star-half.png')
	background-repeat no-repeat
	width 24px
	height 24px
	margin-right 7px
